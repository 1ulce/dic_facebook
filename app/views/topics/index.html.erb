<div class="wrapper">
  <div class= "row">
    <div class= "col-xs-3 col-gray">
    </div>
    <div class= "col-xs-3">
      <div class= "index-form row col-white">
        <%= form_for(@topic, url: topics_path) do |f| %>
          <% if @topic.errors.any? %>
            <% @topic.errors.full_messages.each do |msg| %>
              <div class= "alert alert-warning" role="alert">
              <p><%= msg %></p>
            </div>
            <% end %>
          <% end %>
          <%= f.text_area :content, :placeholder => '今何してる？', class: 'form-control' %>
          <br>
          <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
        <% end %>
      </div>
      <% @topics.each do |topic| %>
        <div class="topics row col-white">
          <div class= "topic-content">
            <p><%= topic.content %></p>
          </div>
          <div class= "topic-operation">
            <%= link_to "編集", edit_topic_path(topic.id), class: 'btn btn-default btn-sm btn-success' %>
            <%= link_to "削除", topic_path(topic.id), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-default btn-sm btn btn-danger' %>
          </div>
        </div>
      <% end %>
    </div>
    <div class= "col-xs-3">
    </div>
    <div class= "col-xs-3 col-gray">
    </div>
  </div>
</div>