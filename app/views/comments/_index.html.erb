<ul>
  <% comments.each do |comment| %>
    <% unless comment.id.nil? %>
      <li class="comment">
        <div class="comment_header row">
          <% user = comment.user %>
          <a class="col-xs-6 col-xs-offset-1" href = "/users/<%= user.id %>">
            <div class="row">
              <div class= "col-xs-4 no-padding">
                <%= profile_img(user) %>
              </div>
              <div class= "col-xs-8 no-padding">
                <p>
                  <%= user.name %>
                </p>
              </div>
            </div>
          </a>
          <% if current_user.id == comment.user.id %>
            <p class="right">
              <%= link_to "", edit_topic_comment_path(topic, comment), class: 'fa fa-pencil-square-o fa-lg' %>
              <%= link_to '', topic_comment_path(topic, comment), class: "fa fa-trash-o fa-lg", method: :delete, remote: true, data: { confirm: '本当に削除していいですか？' } %>
            </p>
          <% end %>
        </div>
        <div class="comment_content row">
          <div class="col-xs-11 col-xs-offset-1">
            <p class="left"><%= comment.content %></p>
          </div>
        </div>
      </li>
    <% end %>
  <% end %>
</ul>
